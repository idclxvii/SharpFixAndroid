<?xml version="1.0" encoding="utf-8"?>
<ScrollView android:layout_width="fill_parent" android:layout_height="fill_parent"
     xmlns:android="http://schemas.android.com/apk/res/android"
	    xmlns:tools="http://schemas.android.com/tools" 
	    android:background="#000000">
	<RelativeLayout 
	    android:layout_width="match_parent"
	    android:layout_height="wrap_content" >
	   
		<TextView
	        android:id="@+id/title"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:text="@string/sssUpdateSelection6"
	        android:textSize="30sp" 
	        android:textStyle="bold"
	        android:textColor="#FFFFFF"
	        >
	    </TextView>
	    <View
	        android:id="@+id/logs_hr1"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/title"
            android:background="#c0c0c0"/>
		<View
		    android:id="@+id/logs_hr2"
             android:layout_width="fill_parent"
             android:layout_height="0.5dp"
             android:layout_below="@+id/logs_hr1"
             android:background="#c0c0c0"/>
	    
	   
	 <TextView
	        android:id="@+id/logs_selection1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/logs_hr2"
	        android:text="@string/subMenuLogsScanLogs"
	        android:textSize="20sp" 
	        android:textStyle="bold"
	        android:clickable="true"
	        android:textColor="@color/text_selector"
	        android:background="@color/background_selector"
	        android:padding="5dp"
	        >
	    </TextView>
	   <TextView
	        android:id="@+id/logs_label1"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/logs_selection1"
	        android:text="@string/subMenuLogsScanLogsLabel"
	        android:textSize="15sp" 
	        android:textColor="@color/text_selector_labels"
	        android:textStyle="italic"
	        android:padding="10dp" />
	 <View
	     	android:id="@+id/logs_hr3"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/logs_label1"
            android:background="#c0c0c0"/>
	
	  <TextView
	        android:id="@+id/logs_selection2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_below="@+id/logs_hr3"
	        android:text="@string/subMenuLogsProgressLogs"
	        android:textSize="20sp" 
	        android:textStyle="bold"
	        android:clickable="true"
	        android:textColor="@color/text_selector"
	        android:background="@color/background_selector"
	        android:padding="5dp"
	        >
	    </TextView>
	   <TextView
	        android:id="@+id/logs_label2"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:layout_alignParentLeft="true"
	        android:layout_below="@+id/logs_selection2"
	        android:text="@string/subMenuLogsProgressLogsLabel"
	        android:textSize="15sp" 
	        android:textColor="@color/text_selector_labels"
	        android:textStyle="italic"
	        android:padding="10dp" />
	 <View
	     	android:id="@+id/logs_hr4"
            android:layout_width="fill_parent"
            android:layout_height="0.5dp"
            android:layout_below="@+id/logs_label2"
            android:background="#c0c0c0"/>
	    
	     
	    
	</RelativeLayout>
</ScrollView>
